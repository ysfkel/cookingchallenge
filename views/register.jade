extends layout

block content
 
  
  .form(class='panel panel-default')
    form(role='form', action='/signup', method='POST')
        input(placeholder='Name',name='name',type='text', class='form-control')
        br
        input(placeholder='Nationality',name='nationality',type='text', class='form-control')
        br
        input(placeholder='Country',name='country',type='text', class='form-control')
        br
        input(placeholder='Mobile',name='mobile',type='text', class='form-control')
        br
        input(placeholder='Email',name='email',type='email', class='form-control')
        br
        input(placeholder='Password',name='password',type='password',class='form-control')
        br
        input(type='submit',value='Register',class='btn btn-info')
        p.message
            | Already registered? 
            a(href='signin') Sign In
 
    
  
  
